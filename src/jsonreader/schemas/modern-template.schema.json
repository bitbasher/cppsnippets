{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Modern OpenSCAD Template",
  "description": "VS Code snippet format for OpenSCAD templates",
  "type": "object",
  "required": ["prefix", "body"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Template display name"
    },
    "description": {
      "type": "string",
      "description": "Template description"
    },
    "scope": {
      "type": "string",
      "description": "Language scope (e.g., 'source.scad')"
    },
    "prefix": {
      "type": "string",
      "description": "Trigger text for the template"
    },
    "body": {
      "oneOf": [
        {
          "type": "string",
          "description": "Single-line template body"
        },
        {
          "type": "array",
          "items": { "type": "string" },
          "description": "Multi-line template body"
        }
      ]
    }
  },
  "additionalProperties": false
}
