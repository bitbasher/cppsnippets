{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Render Color Scheme",
  "description": "OpenSCAD render color scheme definition",
  "type": "object",
  "required": ["name", "colors"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Display name of the color scheme"
    },
    "index": {
      "type": "integer",
      "description": "Sorting index"
    },
    "show-in-gui": {
      "type": "boolean",
      "description": "Whether to display in GUI color picker"
    },
    "colors": {
      "type": "object",
      "description": "Named color palette for rendering",
      "properties": {
        "background": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "axes-color": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "opencsg-face-front": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "opencsg-face-back": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "cgal-face-front": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "cgal-face-back": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "cgal-face-2d": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "cgal-edge-front": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "cgal-edge-back": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "cgal-edge-2d": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" },
        "crosshair": { "type": "string", "pattern": "^#[0-9a-fA-F]{6}$" }
      },
      "additionalProperties": { "type": "string" }
    }
  },
  "additionalProperties": false
}
